#!/bin/zsh

# The line in description.sed that looks like it is replacing
# a space with a space is actually repalcing the <NBS> character
# with the <SPACE> character.

ROOT=$( dirname "$0" )
TMP=/var/tmp/$1.mk
CLEAN=${TMP}.clean

curl https://projecteuler.net/minimal=$1 > ${TMP}

sed -Ef ${ROOT}/description.sed ${TMP} > ${CLEAN}

cat ${CLEAN}

